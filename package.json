{
  "name": "trek-cors",
  "version": "0.0.1",
  "description": "Cross-Origin Resource Sharing(CORS) middleware",
  "repository": "trekjs/cors",
  "author": {
    "name": "Fangdun Cai",
    "email": "cfddream@gmail.com",
    "url": "fundon.me"
  },
  "license": "MIT",
  "keywords": [
    "cors",
    "trek",
    "trek-cors",
    "Cross-Origin Resource Sharing"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=7"
  },
  "scripts": {
    "lint": "xo",
    "test": "xo && nyc node --harmony-async-await ./node_modules/.bin/ava"
  },
  "devDependencies": {
    "ava": "0.17",
    "nyc": "10",
    "request": "2",
    "request-promise": "4",
    "trek-engine": "0.5",
    "xo": "0.17"
  },
  "ava": {
    "concurrency": 5,
    "require": "babel-register"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "es6"
    ],
    "semicolon": false,
    "space": true,
    "ignores": [],
    "rules": {
      "curly": 0,
      "import/no-dynamic-require": 0,
      "import/no-named-as-default": 0,
      "max-lines": 0,
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "todo",
            "fixme"
          ],
          "location": "anywhere"
        }
      ],
      "object-curly-spacing": [
        "error",
        "always",
        {
          "arraysInObjects": true,
          "objectsInObjects": true
        }
      ],
      "space-before-function-paren": [
        2,
        "always"
      ],
      "yoda": 0
    }
  }
}
